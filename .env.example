# Базовый URL для публичных ссылок
PUBLIC_BASE_URL=https://media.yourdomain.com

# API токен для загрузки файлов (сгенерируйте случайную строку)
API_TOKEN=your-secure-api-token-here

# Максимальный размер файла в МБ
MAX_FILE_SIZE=100

# Разрешенные расширения файлов
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,svg,mp4,webm,mkv,avi,mp3,wav,ogg,flac,aac

# CORS origins (домены вашего сайта)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Расписание индексации (cron формат)
INDEXER_SCHEDULE=*/10 * * * *

# GitHub настройки (опционально)
GITHUB_TOKEN=ghp_your_github_token
GITHUB_REPO=username/repo-name
GITHUB_BRANCH=main